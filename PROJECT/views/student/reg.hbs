    <!-- Main JS-->
    <script src="/stylesheets/studentreg/js/global.js"></script>
    <script>
        $('#firstname, #lastname, #password, #email, #cpassword, #gender, #stream, #dob, #mobileno, #schoolname1, #board1, #passingyear1, #marks1, #schoolname2, #board2, #passingyear2, #marks2, #university, #passingyear3, #sem1, #sem2, #sem3, #sem4, #sem5, #sem6, #sem7, #sem8').bind('keyup', function() {
        if(allFilled()) $('#submit').removeAttr('disabled');
        });

        function allFilled() {
            var filled = true;
            $('body input').each(function() {
            if($(this).val() == '') filled = false;
            });
            return filled;
            
        }
        
       
    </script>


