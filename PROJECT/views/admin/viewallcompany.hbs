{{>adminprofilenavbar}}

<div class="container text-center">
    <h1 class="mt-5 text-white font-weight-light">View All Users</h1>
</div>


{{#if status}}
    {{#if hasanycompany}}
    
        <h2 class="mt-5 text-white font-weight-light" style="text-align: center"> COMPANY LIST</h2><br>
        

        
            
            
                
                    
            <table class="table table-hover table-striped table-responsive col-md-12">
                
                    <thead class="thead-dark">
                    <tr>
                        <th>Company Name</th>
                        <th>Company Email</th>
                        <th>Registration Number</th>
                        <th>Website URL</th>
                        <th>Physical Address</th>
                        <th>State</th>
                        <th>ZIP Code</th>
                        <th>HR Name</th>
                        <th>HR Email</th>
                        <th>HR Mobile No:</th>
                        
                                        
                    </tr>
                </thead>

                
                
                {{#each getdocumentfrommongodb}}
                <tr>
                    <td>{{this.companyname}}</td>
                    <td>{{this.companyemail}}</td>
                    <td>{{this.regno}}</td>
                    <td>{{this.url}}</td>
                    <td>{{this.address}}</td>
                    <td>{{this.state}}</td>
                    <td>{{this.zip}}</td>
                    <td>{{this.title}} {{this.firstname}} {{this.lastname}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.mobileno}}</td>    
                </tr>
                {{/each}}
            </table>
    {{else}}
    <h1 class="mt-5 text-white font-weight-light"> NO COMPANY FOUND </h1>
        
    {{/if}}
{{/if}}

