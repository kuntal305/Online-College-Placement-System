<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
<link rel="stylesheet" href="/stylesheets/adminprofile/searchbar.css">

{{>adminprofilenavbar}}

    <div class="container text-center">
        <h1 class="mt-5 text-white font-weight-light">Search Companies</h1>
    </div>
    <br>
    <div class="container h-100">
        <div class="d-flex justify-content-center h-100">
            <form action="/admin/searchhr" method="POST">
                <div class="searchbar">
                    <input class="search_input" type="text" name="name" id="name" placeholder="Search by name">
                    <a class="search_icon"><button class="btn btn-icon" type="submit"><i class="fas fa-search"></i></button></a>
                </div>
            </form>
        </div>
    </div>
    <br><br>
    
        {{#if status}}
            {{#if hasanycompany}}
                <h2 style="text-align: center;color: brown"> COMPANY LIST</h2>
                <div class="container=fluid">
                <table class="table table-hover table-striped table-responsive col-md-12" >
                    <thead class="thead-dark">
                        <tr>
                            <th>Company Name</th>
                            <th>Company Email</th>
                            <th>Registration Number</th>
                            <th>Website URL</th>
                            <th>Physical Address</th>
                            <th>State</th>
                            <th>ZIP Code</th>
                            <th>HR Name</th>
                            <th>HR Email</th>
                            <th>HR Mobile No:</th>
                        
                                        
                        </tr>
                    </thead>
                    {{#each getdocument}}
                    <tr>
                        <td>{{this.companyname}}</td>
                        <td>{{this.companyemail}}</td>
                        <td>{{this.regno}}</td>
                        <td>{{this.url}}</td>
                        <td>{{this.address}}</td>
                        <td>{{this.state}}</td>
                        <td>{{this.zip}}</td>
                        <td>{{this.title}} {{this.firstname}} {{this.lastname}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.mobileno}}</td> 
                        
                            
                    </tr>
                    {{/each}}
                </table>
                </div>
                {{else}}
                <h1 style="text-align: center;color: red"> NO USER FOUND </h1>
            {{/if}}
        {{/if}}
   
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
