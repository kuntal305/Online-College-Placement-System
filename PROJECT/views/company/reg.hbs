
	<link rel="stylesheet" type="text/css" href="/stylesheets/companyreg/css/montserrat-font.css">
	<link rel="stylesheet" type="text/css" href="/stylesheets/companyreg/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
	<!-- Main Style Css -->
    <link rel="stylesheet" href="/stylesheets/companyreg/css/style.css"/>
    <script src="/javascripts/companyreg/validation.js"></script>

	<div class="page-content">
		<div class="form-v10-content">
			<form class="form-detail" action="/company/registerdb" method="POST" id="myform">
				<!--PERSONAL DETAILS-->
				<div class="form-left">
					<h2>Personal Information</h2>
					<div class="form-row">
						<select name="title" id="title">
						    <option class="option" disabled="disabled" selected="selected">Title</option>
						    <option class="option">Mr.</option>
						    <option class="option">Miss.</option>
						    <option class="option">Mrs.</option>
						</select>
						<span class="select-btn">
						  	<i class="zmdi zmdi-chevron-down"></i>
						</span>
					</div>
					<div class="form-group">
						<div class="form-row form-row-1">
							<input type="text" name="firstname" id="firstname" class="input-text" placeholder="First Name" required onblur="checkfname()" onfocus="clearfname()">
                            <div id="fnameerrormsg" style="color: red"></div>
						</div>
						<div class="form-row form-row-2">
							<input type="text" name="lastname" id="lastname" class="input-text" placeholder="Last Name" required onblur="checklname()" onfocus="clearlname()">
                            <div id="lnameerrormsg" style="color: red"></div>
						</div>
					</div>
					<div class="form-row">
						<input type="email" name="email" class="email" id="email" placeholder="Email" required onfocus="clearemail()" onblur="checkemail()">
                        <div id="emailerrormsg" style="color: red"></div>
					</div>
					<div class="form-row">
						<input type="tel" name="mobileno" class="mobileno" id="mobileno" placeholder="Phone No." required onblur="mobnocheck()" onfocus="mobnomsgclear">
                        <div id="mobnoerrormsg" style="color: red"></div>
					</div>
					<div class="form-row">
						<input type="password" name="password" class="password" id="password" placeholder="Password" required onblur="pwdcheck()" onfocus="pwdclear()">
                        <div id="pwderrormsg" style="color: red"></div>
					</div>
					<div class="form-row">
						<input type="password" name="cpassword" class="cpassword" id="cpassword" placeholder="Confirm Password" required onblur="conpwdcheck()" onfocus="conpwdmsgclr()">
                        <div id="cpwdmsg" style="color: red"></div>
					</div>
				</div>
				<!--COMPANY DETAILS-->
				<div class="form-right">
					<h2>Company Details</h2>
					<div class="form-row">
						<input type="text" name="companyname" class="companyname" id="companyname" placeholder="Name" required>
					</div>
					<div class="form-row">
						<input type="text" name="regno" class="regno" id="regno" placeholder="Registration No." required>
					</div>
					<div class="form-row">
						<input type="email" name="companyemail" class="companyemail" id="companyemail" placeholder="Email" required>
					</div>
					<div class="form-row">
						<input type="text" name="url" class="url" id="url" placeholder="Web Site URL" required>
					</div>
					<div class="form-row">
						<input type="text" name="address" class="address" id="address" placeholder="Address" required>
					</div>
					<div class="form-group">
						<div class="form-row form-row-1">
							<input type="tel" name="zip" class="zip" id="zip" placeholder="Zip Code" required>
						</div>
						<div class="form-row form-row-2">
							<select name="state" id="state">
							    <option disabled="disabled" selected="selected">Select State</option>
                                <option value="Andaman and Nicobar Islands">Andaman and Nicobar Islands</option>
                                <option value="Andhra Pradesh">Andhra Pradesh</option>
                                <option value="Arunachal Pradesh">Arunachal Pradesh</option>
                                <option value="Assam">Assam</option>
                                <option value="Bihar">Bihar</option>
                                <option value="Chandigarh">Chandigarh</option>
                                <option value="Chhattisgarh">Chhattisgarh</option>
                                <option value="Dadra and Nagar Haveli">Dadra and Nagar Haveli</option>
                                <option value="Daman and Diu">Daman and Diu</option>
                                <option value="Delhi">Delhi</option>
                                <option value="Goa">Goa</option>
                                <option value="Gujarat">Gujarat</option>
                                <option value="Haryana">Haryana</option>
                                <option value="Himachal Pradesh">Himachal Pradesh</option>
                                <option value="Jammu and Kashmir">Jammu and Kashmir</option>
                                <option value="Jharkhand">Jharkhand</option>
                                <option value="Karnataka">Karnataka</option>
                                <option value="Kerala">Kerala</option>
                                <option value="Lakshadweep">Lakshadweep</option>
                                <option value="Madhya Pradesh">Madhya Pradesh</option>
                                <option value="Maharashtra">Maharashtra</option>
                                <option value="Manipur">Manipur</option>
                                <option value="Meghalaya">Meghalaya</option>
                                <option value="Mizoram">Mizoram</option>
                                <option value="Nagaland">Nagaland</option>
                                <option value="Orissa">Orissa</option>
                                <option value="Pondicherry">Pondicherry</option>
                                <option value="Punjab">Punjab</option>
                                <option value="Rajasthan">Rajasthan</option>
                                <option value="Sikkim">Sikkim</option>
                                <option value="Tamil Nadu">Tamil Nadu</option>
                                <option value="Tripura">Tripura</option>
                                <option value="Uttaranchal">Uttaranchal</option>
                                <option value="Uttar Pradesh">Uttar Pradesh</option>
                                <option value="West Bengal">West Bengal</option>
							</select>
							<span class="select-btn">
							  	<i class="zmdi zmdi-chevron-down"></i>
							</span>
						</div>
					</div>
					
					<div class="form-checkbox">
						<label class="container"><p>I do accept the <a href="#" class="text">Terms and Conditions</a> of your site.</p>
						  	<input type="checkbox" name="checkbox" id="checkbox">
						  	<span class="checkmark"></span>
						</label>
					</div>
					<div class="form-row-last">
						<input type="submit" name="submit" id="submit" class="register" value="Register" disabled="disabled">
					</div>
					
				</div>
			</form>
		</div>
	</div>
    <script src="/javascripts/jquery.min.js"></script>
    <script>
        $('#firstname, #lastname, #password, #email, #cpassword, #mobileno, #companyname, #companyemail, #regno, #url, #address, #zip, #place, #checkbox, #title' ).bind('keyup', function() {
        if(allFilled()) $('#submit').removeAttr('disabled');
        });

        function allFilled() {
            var filled = true;
            $('body input').each(function() {
            if($(this).val() == '') filled = false;
            });
            return filled;
            
        }
    </script>
